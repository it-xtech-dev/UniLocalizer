@model UniLocalizer.Demo.Models.Book

@using Newtonsoft.Json;

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OriginalTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OriginalTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>
    </dl>
    <h5>Translations</h5>
    @if (Model.Translations.Any())
    {
        <dl class="row">
            @foreach (var t in Model.Translations)
            {
                <dt class="col-sm-2">
                    @t.CultureName @(nameof(t.Title))
                </dt>
                <dd class="col-sm-10">
                    @t.Title
                </dd>
            }
        </dl>
    }
    else
    {
        <p>No translation entries present</p>
    }
    @JsonConvert.SerializeObject(Model.Translations.ToJsonDictionary())
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.BookId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
